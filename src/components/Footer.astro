---
// Library Imports
import { Image } from '@astrojs/image/components';

// Component Imports
import Logo from './Logo.astro';

// Data Imports
import navData from '../data/navData.json';
---

<footer class="footer">
  <div class="top">
    <div>
      <div class="logo">
        <Logo />
        <p>
          Lorem ipsum, dolor sit amet consectetur adipisicing elit. Ipsam libero
          laudantium rerum harum sapiente repudiandae ratione distinctio.
        </p>
      </div>
    </div>
    <div>
      <h3>CONTACT US</h3>
    </div>
    <div>
      <h3>FOLLOW US</h3>
    </div>
    <div>
      <h3>@NOAAData Instagram Feed</h3>
      <div class="images">
        <Image
          src="https://picsum.photos/600/300?random=300"
          alt="sample images"
          width="90"
          height="90"
          format="webp"
          loading="lazy"
        />
        <Image
          src="https://picsum.photos/600/300?random=600"
          alt="sample images"
          width="90"
          height="90"
          format="webp"
          loading="lazy"
        />
        <Image
          src="https://picsum.photos/600/300?random=700"
          alt="sample images"
          width="90"
          height="90"
          format="webp"
          loading="lazy"
        />
        <Image
          src="https://picsum.photos/600/300?random=800"
          alt="sample images"
          width="90"
          height="90"
          format="webp"
          loading="lazy"
        />
      </div>
    </div>
  </div>

  <div class="bottom">
    <ul>
      {
        navData?.map(item =>
          //TESTING
          item.parent == '' &&
          item.id !==
            'menu_link_content:31432029-32f7-4015-81a6-e402aded0827' ? (
            <li>
              <a href={item.href}>{item.text}</a>
            </li>
          ) : (
            ''
          )
        )
      }
    </ul>
    <p>Copyright Â© <span>{new Date().getFullYear()}</span> NCEI</p>
  </div>
</footer>

<style>
  .footer {
    max-width: 100%;

    & .top {
      padding: 2em;
      gap: 2em;
      background: var(--clr-white);
      color: var(--clr-base);
      display: flex;
      justify-content: space-evenly;

      @media (--tablet) {
        flex-direction: column;
        align-items: center;
      }

      & div {
        gap: 1em;
        display: flex;
        flex-direction: column;
        width: 350px;
        align-items: center;

        @media (--tablet) {
          text-align: center;
        }

        .images {
          width: fit-content;
          gap: 1em;
          display: grid;
          grid-template-rows: 1fr 1fr;
          grid-template-columns: 1fr 1fr;

          @media (--phone) {
            grid-template-rows: 1fr;
          }
        }
      }
      & a {
        color: var(--clr-primary);
        & a:hover {
          text-decoration: underline;
          & h3 {
            margin-bottom: 10px;
            & div:nth-child(1) {
              text-align: left;
              & img {
                height: 35px;
                vertical-align: middle;
              }
              @media (max-width: 500px) {
                .footer div:nth-child(2) {
                  display: none;
                }
              }
            }
          }
        }
      }
    }
    & .bottom {
      background-color: hsla(216, 14%, 28%, 1);
      color: var(--clr-white);
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
      padding-inline: 2em;

      & ul {
        display: flex;
        flex-direction: row;
        gap: 1em;
        flex-wrap: wrap;

        & li {
          list-style: none;
        }
      }
    }
  }
</style>
