<svg class="glow--container">
  <rect pathLength="100" stroke-linecap="round" class="glow--blur"></rect>
  <rect pathLength="100" stroke-linecap="round" class="glow--line"></rect></svg
>

<style is:global>
  .glow {
    --glow-line-color: var(--clr-black);
    --glow-line-thickness: 1px;
    --glow-line-length: 90px;
    --glow-blur-color: var(--clr-white);
    --glow-blur-size: 3px;
    --glow-offset: 10px;
    --animation-speed: 1000ms;

    --rx: 1.25rem;
    /* do not change, used for calculations */
    --container-offset: 100px;
    position: relative;

    &:is(:active, :focus) {
      & :is(.glow--line, .glow--blur) {
        stroke-dashoffset: -80px;
        transition: stroke-dashoffset var(--animation-speed) ease-in;
      }

      & .glow--container {
        animation: glow-visibility ease-in-out var(--animation-speed);
      }
    }

    & .glow--container {
      pointer-events: none;
      position: absolute;
      inset: calc(var(--container-offset) / -2.1);
      width: calc(100% + var(--container-offset));
      height: calc(100% + var(--container-offset));
      opacity: 0;
    }

    & .glow--blur {
      width: calc(100% - var(--container-offset) + var(--glow-offset));
      height: calc(100% - var(--container-offset) + var(--glow-offset));
      x: calc((var(--container-offset) / 2) + calc(var(--glow-offset) / -2));
      y: calc((var(--container-offset) / 2) + calc(var(--glow-offset) / -2));
      rx: var(--rx);
      stroke-dasharray: var(--glow-line-length)
        calc(50px - var(--glow-line-length));
      fill: transparent;

      filter: blur(var(--glow-blur-size));
      stroke: var(--glow-blur-color);
      stroke-width: var(--glow-blur-size);
    }

    & .glow--line {
      width: calc(100% - var(--container-offset) + var(--glow-offset));
      height: calc(100% - var(--container-offset) + var(--glow-offset));
      x: calc((var(--container-offset) / 2) + calc(var(--glow-offset) / -2));
      y: calc((var(--container-offset) / 2) + calc(var(--glow-offset) / -2));
      rx: var(--rx);
      fill: transparent;
      stroke-dasharray: 20px 30px;
      transition: stroke-dashoffset 500ms;

      stroke: var(--glow-line-color);
      stroke-width: var(--glow-line-thickness);
    }
  }
</style>

